<div ng-controller="userlistController as userlistctrl">
    <h1>用户列表</h1>
    <p>{{userlistctrl.message}}</p>
    <!--<table ng-table-dynamic = "userlistctrl.tableParams with userlistctrl.cols"-->
           <!--class="table table-condensed table-bordered table-striped">-->
        <!--<tr ng-repeat = "row in $data">-->
            <!--<td ng-repeat = "col in $columns">-->
                <!--{{row[col.field]}}-->
            <!--</td>-->
        <!--</tr>-->
    <!--</table>-->

    <table ng-table = "userlistctrl.tableParams" show-filter="true" class="table table-condensed table-bordered">
        <tr ng-repeat="user in $data">
            <!--<td data-title="'id'"  sortable="'id'" filter="{'id':'text'}">-->
                <!--{{user._id}}-->
                <!--&lt;!&ndash;<input type="checkbox">&ndash;&gt;-->
            <!--</td>-->
            <td data-title="'name'"  sortable="'name'" filter="{'name':'text'}">
                {{user.name}}
            </td>
            <td data-title="'email'"  sortable="'email'" filter="{'email':'text'}">
                {{user.email}}
            </td>
            <td data-title="'age'"  sortable="'age'" filter="{'age':'text'}">
                {{user.age}}
            </td>
            <td title="'Actions'">
                <button class="btn btn-default btn-sm"
                        data-toggle = "modal"
                        data-target="#editModal"
                        ng-click = 'userlistctrl.editUser(user._id)'>
                <span class="glyphicon glyphicon-pencil"></span>
                </button>
                <button class="btn btn-danger btn-sm"
                        data-toggle = "modal"
                        data-target="#delModal"
                        ng-click = 'userlistctrl.editUser(user._id)'>
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </td>
        </tr>
    </table>


    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">用户信息</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal"
                          name="editForm"
                          ng-submit="userlistctrl.updataUser(userlistctrl.editData._id);"
                          role="form">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <input type="text"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.name"
                                       placeholder="输入登陆名">
                            </div>
                        </div>
                        <!--<div class="form-group">-->
                            <!--&lt;!&ndash;<label for="inputPassword3" class="col-sm-2 control-label">Gender</label>&ndash;&gt;-->
                            <!--<div class="col-sm-offset-2 col-sm-10 text-left">-->
                                <!--<div ng-init="userlistctrl.editData.gender">-->
                                    <!--<input type="radio"-->
                                           <!--ng-model="userlistctrl.editData.gender"-->
                                            <!--value="1">男-->
                                    <!--<input type="radio"-->
                                            <!--ng-model="userlistctrl.editData.gender"-->
                                            <!--value="0">女-->
                                <!--</div>-->
                            <!--</div>-->
                        <!--</div>-->
                        <div class="form-group">
                            <label  class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.email"
                                       placeholder="输入邮箱">
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-2 control-label">Nicname</label>
                            <div class="col-sm-10">
                                <input type="text"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.nicName"
                                       placeholder="输入昵称">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Age</label>
                            <div class="col-sm-10">
                                <input type="number"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.age"
                                       placeholder="输入年龄">
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">
                                <input type="text"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.address"
                                       placeholder="输入地址">
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-2 control-label">Phone</label>
                            <div class="col-sm-10">
                                <input type="number"
                                       class="form-control"
                                       ng-model="userlistctrl.editData.phone"
                                       placeholder="输入手机号">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Warning!!</h4>
                </div>
                <div class="modal-body">
                    你确定要删除该用户吗?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button"
                            ng-click="userlistctrl.delUser(userlistctrl.uid);"
                            class="btn btn-primary">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <p>{{userlistctrl.messageStr}}</p>
</div>
