<form class="form-horizontal"
        enctype="multipart/form-data"
        method="post"
        action="{{'/photo/' + pctrl.year + '/' + pctrl.month + '/' + pctrl.timestr}}"
        role="form">

    <div class="form-group">
        <label for="fieldName"
               class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text"
                   id="fieldName"
                   name="name"
                   class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldEmail"
               class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="email"
                   required
                   id="fieldEmail"
                   name="email"
                   class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="fieldPhoto"
                class="col-sm-2 control-label">Photo</label>
        <div class="col-sm-4">
            <input type="file"
                    accept="image/*"
                    id="fieldPhoto"
                    data-url="/upload"
                    name="photo"
                    required
                    class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2  col-sm-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>